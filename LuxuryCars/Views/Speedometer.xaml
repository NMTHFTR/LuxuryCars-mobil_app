<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuxuryCars.Views.Speedometer"
             Title="Sebességmérő" BackgroundColor="{StaticResource Gray900}">
    <Grid >
        <StackLayout>
            
            <Label HorizontalOptions="Center" VerticalOptions="Center" x:Name="sebesseg" TextColor="White" FontSize="40" />
            <Button Margin="0,10,0,0" Text="Sebesség mentése" Clicked="Button_Clicked"/>
            <StackLayout Orientation="Horizontal" Margin="10,20,0,0">
                <Label  Text="Utolsó mért sebesség: " TextColor="White" FontSize="20"/>
                <Label x:Name="mertLBL" TextColor="White" FontSize="20"/>
            </StackLayout>
        </StackLayout>
        
        
        
       
       
    </Grid>
</ContentPage>