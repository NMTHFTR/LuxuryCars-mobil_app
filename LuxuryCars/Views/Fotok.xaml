<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LuxuryCars.Views.Fotok"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Fotok">
    <VerticalStackLayout>
        <CarouselView IndicatorView="indicatorView" x:Name="CaruselView">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <toolkit:MediaElement x:Name="mediaElement"
                      ShouldAutoPlay="True"
                      ShouldShowPlaybackControls="True"
                      Source="{Binding title}"
                      HeightRequest="300"
                      WidthRequest="400"
                       />
                        <Label Text="{Binding title}" FontSize="Medium" HorizontalTextAlignment="Center" WidthRequest="400"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView x:Name="indicatorView" Margin="5" HorizontalOptions="Center" IndicatorColor="Green" SelectedIndicatorColor="Red"/>
    
    </VerticalStackLayout>
    
</ContentPage>